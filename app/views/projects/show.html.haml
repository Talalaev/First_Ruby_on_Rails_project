%p#notice
  = notice
%p
  %strong Name:
  = @project.name

%p
  %strong Description:
  = @project.description

%p
  %strong Date:
  = @project.date


%h1 Список заданий
%table.table_S
  %thead
    %tr
      %th Название
      %th Описание
      %th Дата создания
      %th Крайний срок
      %th Статус
      %th{:colspan => "3"} Редактировать
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.date
        %td= task.deadline_date
        %td= task.status
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }

= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label 'Create new task'
    %br
      = f.hidden_field :project_id, :value => @project.id
  .field
    = f.label :name
    %br
      = f.text_field :name
  .field
    = f.label :description
    %br
      = f.text_field :description
  .field
    = f.label :date
    %br
      = f.date_select :date
  .field
    = f.label :deadline_date
    %br
      = f.date_select :deadline_date
  .field
    = f.label :status
    %br
      = f.check_box :status
  .actions
    = f.submit

= link_to 'Edit', edit_project_path(@project) 
|
= link_to 'Back', projects_path
