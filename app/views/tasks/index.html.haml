%p#notice= notice
%h1 Список заданий
%table.table_S
  %thead
    %tr
      %th Название
      %th Описание
      %th Дата создания
      %th Крайний срок
      %th Статус
      %th{:colspan => "3"} Редактировать
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.name
        %td= task.description
        %td= task.date
        %td= task.deadline_date
        %td= task.status
        %td= link_to 'Show', task
        %td= link_to 'Edit', edit_task_path(task)
        %td= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }
%br
  = link_to 'Создать задачу', new_task_path, class: 'button_S'
